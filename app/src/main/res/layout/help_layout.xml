<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/help_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/transparent_black">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:alpha="2"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin">

        <!--heading-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/pokey"
                android:textSize="28sp"
                android:layout_weight="1"
                android:text="About Foodini"/>
            <ImageButton
                android:id="@+id/close_help"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/x"
                android:onClick="closeHelpClicked" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_gray"
            android:layout_marginBottom="14dp"/>

        <!--instructions-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_slate_gray"
            android:textSize="22sp"
            android:text="Intructions"/>
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pokey"
                android:textSize="20sp"
                android:text="&#187;&#8195;"
                android:layout_gravity="center_vertical"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Enter ingredients that you have around. Tap the &#8220;+&#8221; button to add each."
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pokey"
                android:textSize="20sp"
                android:text="&#187;&#8195;"
                android:layout_gravity="center_vertical"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Tap the &#8220;&#215;&#8221; button to delete an unwanted ingredient or &#8220;trash can&#8221; button to clear all entries"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pokey"
                android:textSize="20sp"
                android:text="&#187;&#8195;"
                android:layout_gravity="center_vertical"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:text="Search for recipes that use the entered ingredients by tapping &#8220;Find Recipes&#8221;"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pokey"
                android:textSize="20sp"
                android:text="&#187;&#8195;"
                android:layout_gravity="center_vertical"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Choose a dish and enjoy your tasty dinner!"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!--intructions-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_slate_gray"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:text="About"/>
        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foodini is a collaborative effort of a few SPARC developers. It was initially created for Hackathon 4, a programming competition."/>
        <TextView
            android:paddingTop="10dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#169; 2014 Tyler R, Todd P, and Mike H"
            android:layout_gravity="center"/>
    </LinearLayout>
</FrameLayout>