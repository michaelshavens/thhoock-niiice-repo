<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="#FAF0D2">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_padding_top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/fullRecipeLayout"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/fullRecipeName"
        android:gravity="center|center_vertical|center_horizontal" />

    <com.loopj.android.image.SmartImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/fullRecipeImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/fullProgressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="288dp"
        android:id="@+id/fullRecipeListView"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Recipe!"
        android:id="@+id/fullRecipeButton"
        android:layout_gravity="center_horizontal"
        android:background="#437356"
        android:textColor="#FAF0D2"/>

</LinearLayout>

</ScrollView>


